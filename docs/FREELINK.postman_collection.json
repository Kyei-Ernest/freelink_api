    {
      "name": "Jobs",
      "item": [
        {
          "name": "List Jobs",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Token {{token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/jobs/?status=available&page=1",
              "host": ["{{base_url}}"],
              "path": ["jobs", ""],
              "query": [
                {"key": "status", "value": "available"},
                {"key": "page", "value": "1"},
                {"key": "search", "value": "", "disabled": true},
                {"key": "ordering", "value": "-created_at", "disabled": true}
              ]
            }
          }
        },
